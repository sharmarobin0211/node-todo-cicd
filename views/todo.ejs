<!DOCTYPE html>
<html lang="en">
<head>
    <title>üî•Todo List</title>
    <style>
        :root {
            --bg-color: #121212;
            --container-bg: rgba(128, 128, 128, 0.2);
            --card-bg: #1e1e1e;
            --text-color: #ddd;
            --input-bg: #2a2a2a;
            --btn-bg: #6f42c1;
            --btn-hover: #8257e5;
            --delete-btn: #ff4b5c;
            --favorite-btn: #f4b400;
            --header-bg: linear-gradient(45deg, #6f42c1, #8257e5);
        }

        body {
            font-family: "Poppins", sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            text-align: center;
            margin: 0;
            padding: 20px;
            transition: background 0.3s ease;
        }

        .header {
            background: var(--header-bg);
            padding: 20px;
            border-radius: 12px;
            font-size: 24px;
            font-weight: bold;
            color: white;
            text-shadow: 2px 2px 5px rgba(0,0,0,0.3);
            margin-bottom: 20px;
            position: relative;
        }

        /* Dark Mode Toggle Icon */
        .dark-mode-toggle {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 22px;
            cursor: pointer;
            transition: 0.3s;
        }

        .dark-mode-toggle:hover {
            transform: scale(1.1);
        }

        .container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background: var(--container-bg);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        /* Light Mode */
        .light-mode {
            --bg-color: #f4f4f4;
            --text-color: #333;
            --container-bg: rgba(200, 200, 200, 0.2);
            --card-bg: #fff;
            --input-bg: #e0e0e0;
        }

        /* Todo List */
        ul {
            list-style: none;
            padding: 0;
        }

        ul li {
            background: var(--input-bg);
            padding: 12px;
            margin: 10px 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: 0.3s;
            position: relative;
        }

        ul li.completed {
            text-decoration: line-through;
            opacity: 0.6;
        }

        ul li.favorite {
            border-left: 5px solid var(--favorite-btn);
        }

        .delete-btn, .edit-btn, .complete-btn, .favorite-btn {
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
            margin-left: 8px;
        }

        .delete-btn { color: var(--delete-btn); }
        .delete-btn:hover { color: #ff7878; }

        .edit-btn { color: var(--btn-bg); }
        .edit-btn:hover { color: var(--btn-hover); }

        .complete-btn { color: #4caf50; }
        .complete-btn:hover { color: #66bb6a; }

        .favorite-btn { color: var(--favorite-btn); }
        .favorite-btn:hover { color: #ffcc00; }

        /* Form */
        form {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        input[type="text"] {
            width: 90%;
            max-width: 350px;
            padding: 12px;
            border: none;
            background: var(--input-bg);
            border-radius: 10px;
            color: var(--text-color);
            box-sizing: border-box;
        }

        .btn {
            background-color: var(--btn-bg);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
            margin-top: 10px;
        }

        .btn:hover { background-color: var(--btn-hover); }
    </style>
</head>
<body>

    <div class="header">
        Make Your Todo List
        <span class="dark-mode-toggle" onclick="toggleTheme()">üåô</span>
    </div>

    <div class="container">
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li class="<%= todo.completed ? 'completed' : '' %> <%= todo.favorite ? 'favorite' : '' %>">
                <span><%- todo.text %></span>
                <span>
                    <a href="/todo/complete/<%= index %>" class="complete-btn">‚úÖ</a>
                    <a href="/todo/favorite/<%= index %>" class="favorite-btn">‚≠ê</a>
                    <a href="/todo/<%= index %>" class="edit-btn">‚úèÔ∏è</a>
                    <a href="/todo/delete/<%= index %>" class="delete-btn">‚ùå</a>
                </span>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <input type="text" name="newtodo" placeholder="Add a new task..." autofocus />
            <input type="submit" value="Add Task" class="btn" />
        </form>
    </div>

    <script>
        function toggleTheme() {
            const body = document.body;
            const icon = document.querySelector('.dark-mode-toggle');
            const currentTheme = localStorage.getItem("theme");

            if (currentTheme === "light") {
                body.classList.remove("light-mode");
                localStorage.setItem("theme", "dark");
                icon.innerHTML = "üåô";
            } else {
                body.classList.add("light-mode");
                localStorage.setItem("theme", "light");
                icon.innerHTML = "‚òÄÔ∏è";
            }
        }

        // Load saved theme
        window.onload = function () {
            const icon = document.querySelector('.dark-mode-toggle');
            if (localStorage.getItem("theme") === "light") {
                document.body.classList.add("light-mode");
                icon.innerHTML = "‚òÄÔ∏è";
            }
        };
    </script>

</body>
</html>
